def happyLadybugs(b):
    # Write your code here

    count = Counter(b)
    
    if any(v == 1 for k, v in count.items() if k != '_'):
        return "NO"
    
    if '_' not in b:
        for i in range(len(b)):
            if (i > 0 and b[i] == b[i-1]) or (i < len(b)-1 and b[i] == b[i+1]):
                continue
            else:
                return "NO"
    
    return "YES"
